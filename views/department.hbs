<div class="row">
    <div class="col-md-12">
        <h1>{{data.departmentName}} - Department: {{data.departmentId}}</h2>
            <form method="post" action="/departments/update">
                <input class="" type="hidden" name="departmentId" value="{{data.departmentId}}" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="departmentName">Department Name:</label>
                            <input class="form-control" id="departmentName" name="departmentName" type="text" value="{{data.departmentName}}" />
                        </div>
                    </div>
                </div>
                <hr />
                <input type="submit" class="btn btn-primary pull-right" value="Update Department" /><br /><br /><br />
            </form>
    </div>
</div>